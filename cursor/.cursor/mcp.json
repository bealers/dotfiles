{
  "mcpServers": {
    "taskmaster-ai": {
      "command": "node",
      "args": ["/path/to/taskmaster-ai-mcp-server/dist/index.js"],
      "env": {
        "TASKMASTER_API_KEY": "YOUR_TASKMASTER_API_KEY_HERE"
      }
    },
    "todoist": {
      "command": "node",
      "args": ["/path/to/todoist-mcp-server/dist/index.js"],
      "env": {
        "TODOIST_API_TOKEN": "YOUR_TODOIST_API_TOKEN_HERE"
      }
    },
    "github": {
      "command": "node",
      "args": ["/path/to/github-mcp-server/dist/index.js"],
      "env": {
        "GITHUB_TOKEN": "YOUR_GITHUB_TOKEN_HERE"
      }
    }
  }
} 